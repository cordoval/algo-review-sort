{% extends embedded ? "embedded.html.twig" : "layout.html.twig" %}

{% block body %}
<div class="sort-result">
    {% for snapshot in snapshots %}
        <div class = "snapshot fragment">
            <span class="iteration">{{ loop.index }}</span>
            {% for element in snapshot.elements %}
                <div class="element">
                    <span class="index
                        {% if snapshot.indices.0 is defined and loop.index0 == snapshot.indices.0 %}
                            primary
                        {% else %}
                            secondary
                        {% endif %}"
                    >
                        {% if loop.index0 in snapshot.indices %}&#x21aa;{% endif %}
                    </span>
                    <span class="value"
                        style="border-color: hsl({{ element }}, 100%, 75%);
                            background: hsl({{ element }}, 50%, 75%);
                            color: hsl({{ element }}, 80%, 30%);"
                    >{{ element }}</span>
                    <span class="diff">{% if snapshot.diff[loop.index0] is defined %}&#x21c5;{% endif %}</span>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
{% endblock %}
